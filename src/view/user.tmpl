{% function block.content() %}
<main>
  <h1>{%& username %}</h1>

  {% if has_user_access then %}
    <nav>
      <a href="/{%& username %}/{%& new_post_id %}">
        Write
      </a>

      <a href="/a/logout">
        Logout
      </a>
    </nav>
  {% end %}

  <h2>Posts</h2>
  <ul>
    {% for _, post in pairs(posts) do %}
      <li>
        <a href="/{%& username %}/{%& post.slug or post.post_id %}">
          {%& post.title or post.slug or post.post_id %}
        </a>
      </li>
    {% end %}
  </ul>
</main>
{% end %}

{% render('layout') %}
